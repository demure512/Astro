---
// 页面 Info
import SITE_CONFIG from "@/config";
const { Description } = SITE_CONFIG;
// 页面布局
import PageLayout from "@/layouts/PageLayout/PageLayout.astro";
// Russian Parser 组件
import RussianParser from "@/components/RussianParser/RussianParser.astro";

const frontmatter = {
  title: "歌曲分词器",
  h1: "俄语歌曲分词器🌀",
  desc: "解析文本并划分为单词和句子，支持发音",
  type: "russian",
  comment: false
};
---

<PageLayout frontmatter={frontmatter}>
  <div class="russian-parser-page">
    <RussianParser />
    
    <div class="usage-tips">
      <h2>使用提示</h2>
      <ol>
        <li>首次使用请  <strong>刷新</strong>  看案例</li>
        <li>在文本框中输入  <strong>俄语</strong>  文本（支持多行歌词）</li>
        <li>点击  "解析文本"  按钮进行划分</li>
        <li>点击句子旁边的<strong>小喇叭图标</strong>可听取整个句子的发音</li>
        <li>每个句子都有独立的播放按钮，方便逐句学习</li>
      </ol>
      <p class="note">注意：此功能使用浏览器的语音合成 API，发音效果取决于浏览器和系统支持的语音包。翻译功能内置基础词汇，更多词汇将持续更新。</p>
    </div>
  </div>
</PageLayout>

<style>
  .russian-parser-page {
    width: 100%;
    padding: 0;
  }
  
  .usage-tips {
    margin-top: 3rem;
    padding: 1.5rem;
    background-color: #f9f9f9;
    border-radius: var(--vh-main-radius);
  }
  
  .usage-tips h2 {
    margin-bottom: 1rem;
    color: var(--vh-font-color);
    font-size: 1.5rem;
  }
  
  .usage-tips ol {
    padding-left: 1.5rem;
    margin-bottom: 1.5rem;
  }
  
  .usage-tips li {
    margin-bottom: 0.5rem;
  }
  
  .note {
    font-size: 0.9rem;
    color: #666;
    font-style: italic;
  }
  
  @media (max-width: 768px) {
    .russian-parser-page {
      padding: 0;
    }
  }
</style> 